{
  "id": "io.github.mrvladus.List",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "errands",
  "finish-args": [
    "--device=dri",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--share=ipc",
    "--share=network",
    "--talk-name=org.freedesktop.secrets",
    "--filesystem=home"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/aclocal",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "libportal",
      "buildsystem": "meson",
      "config-opts": [
        "-Dbackend-gtk4=enabled",
        "-Dbackend-gtk3=disabled",
        "-Dbackend-qt5=disabled",
        "-Dbackend-qt6=disabled",
        "-Dvapi=false",
        "-Ddocs=false",
        "-Dtests=false",
        "-Dintrospection=false"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/flatpak/libportal.git",
          "tag": "0.9.1"
        }
      ]
    },
    {
      "name": "libical",
      "buildsystem": "cmake",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DWITH_CXX_BINDINGS=False",
        "-DGOBJECT_INTROSPECTION=False",
        "-DICAL_BUILD_DOCS=False",
        "-DICAL_GLIB=False",
        "-DENABLE_GTK_DOC=False",
        "-DLIBICAL_BUILD_TESTING=False",
        "-DLIBICAL_BUILD_EXAMPLES=False"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libical/libical.git",
          "tag": "v3.0.20"
        }
      ]
    },
    {
      "name": "errands",
      "buildsystem": "simple",
      "build-commands": ["make -j$FLATPAK_BUILDER_N_JOBS prefix=/app install"],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/mrvladus/Errands.git",
          "tag": "49.0"
        }
      ]
    }
  ]
}
